                  "copy": [
                    {
                      "name": "ipRules",
                      "count": "[length(parameters('ipRules'))]",
                      "input": {
                        "value": "[parameters('ipRules')[copyIndex('ipRules')]]",
                        "action": "Allow"
                      }
                    }
                  ],
                  "defaultAction": "[if(equals(length(parameters('ipRules')), 0), 'Allow', 'Deny')]",
                  "virtualNetworkRules": []
